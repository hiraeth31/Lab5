@page
@model IndexModel
@{
    ViewData["Title"] = "Главная";
}

<div class="hero-section d-flex align-items-center justify-content-center text-center"
     style="min-height: 80vh; /* Оставляем минимальную высоту */
     background-image: url(' /images/background.jpg'); /* <-- Путь к твоему изображению */
            background-size: cover; /* Масштабирует изображение, чтобы покрыть контейнер */
            background-position: center center; /* Центрирует изображение */
            background-repeat: no-repeat; /* Предотвращает повторение изображения */
            ">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                @* Цвет текста и стиль кнопки остаются как были в твоем исходном коде
                   или как определено глобальными стилями Bootstrap/site.css *@
                <h1 class="display-4 fw-bold mb-4" style="white-space: nowrap;">Мы поможем вам стать лучше!</h1>
                <p class="lead mb-5">Бесчисленное количество статей по саморазвитию</p>
                <div class="d-flex justify-content-center">
                    @* Стиль кнопки будет тот, что у тебя был изначально или задан в других CSS файлах *@
                    <a class="btn cta-btn px-5 py-3" asp-page="/Articles">Начать</a>
                </div>
            </div>
        </div>
    </div>
</div>